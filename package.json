    "tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.0",
    "@tsconfig/node22": "^22.0.2",
    "@tsconfig/node24": "^24.0.1",
    "@types/express": "^5.0.5",
    "@types/node": "^24.9.2",
    "@vitest/coverage-v8": "^4.0.6",
    "@vitest/eslint-plugin": "^1.4.0",
    "eslint": "^9.39.0",
    "eslint-plugin-perfectionist": "^4.15.1",
    "prettier": "^3.6.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",

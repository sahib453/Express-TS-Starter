    "format:check": "prettier --check .",
    "test": "vitest",
    "test:run": "vitest --run",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage"
  },
  "imports": {
    "#*": "./src/*"
  },
  
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {

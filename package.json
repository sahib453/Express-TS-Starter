{
  "name": "expresstsstarter",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "dev": "tsx --watch --env-file .env src/index.ts",
    "start": "node --env-file .env dist/index.js",
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "type-check": "tsc --noEmit",
